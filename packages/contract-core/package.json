{
  "name": "@wavesenterprise/contract-core",
  "version": "1.0.15",
  "description": "Implements JS Contract SDK core functionality, rpc services, tools and utilities.",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/index.js",
    "dev": "tsc -w -p tsconfig.json",
    "prettier:fix": "prettier --write src/**/*.ts",
    "lint": "eslint */**/*.{js,ts} --quiet --fix",
    "test": "jest --watch"
  },
  "author": {
    "name": "Timofey Semenyuk",
    "email": "rustfy@gmail.com",
    "url": "https://github.com/stfy"
  },
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.6.2",
    "@wavesenterprise/js-contract-grpc-client": "1.10.0",
    "@wavesenterprise/sdk": "^1.0.3",
    "google-protobuf": "^3.21.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^28.1.3",
    "lerna": "^4.0.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.8",
    "typescript": "^4.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
